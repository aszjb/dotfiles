function r() {
  local f
  f=(~/.zsh_fun/*(.))
  unfunction $f:t 2> /dev/null
  autoload -U $f:t
}

# jq wrapper
#
# e.g
# $ jqw package.json
# $ jqw package.json '.dependencies'
# $ jqw http://api.example.com/foo.json
# $ jqw http://api.example.com/foo.json '.query'
function jqw() {
  target=$1

  query=$2
  if [ -z "${query}" ]; then
    query='.'
  fi

  if [[ $1 =~ 'http' ]]; then
    curl -s $1 | jq $query
  else
    jq $query $1
  fi
}

