[user]
	email = k.hokamura@gmail.com
	name = Kazuhito Hokamura
[color]
	ui = auto
	status = auto
	diff = auto
	branche = auto
[alias]
	co = checkout
	ci = commit -v
	st = status -sb
	br = branch
	l  = !git --no-pager log --oneline -n 10
	amend = commit --amend -C HEAD
	g = log --graph --all --oneline --decorate
	a = add -A .
	pr = pull --rebase
	i = !git init && git commit --allow-empty -m 'initial commit'
	s = !tig status
	clean-branch = !bash -c 'git remote prune origin && comm -23 <(git branch --merged | grep -v "^*") <(git branch -r | sed -e "s%origin/%%") | xargs git branch -d'
[push]
	default = current
[diff]
	algorithm = patience
	tool = macvim-diff
[difftool "macvim-diff"]
	cmd = "/Applications/MacVim.app/Contents/MacOS/Vim -g -dO -f $LOCAL $REMOTE"
[core]
	excludesfile = ~/.gitexclude
	pager = LESS=-R less
	editor = /usr/bin/vim
	autocrlf = false
	quotepath = false
	precomposeunicode = true
[github]
	user = hokaccha
[heroku]
	account = personal
[merge]
	ff = false
[pull]
	rebase = true
[ghq]
	root = /Users/hokamura/local/src
[credential]
	helper = osxkeychain
